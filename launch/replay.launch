<?xml version="1.0"?>
<launch>

  <arg name="bag"       default=""/>
  <arg name="map_name"  default="simple_room"/>

  <param name="/use_sim_time" value="true"/>

  <!-- rviz -->
  <node name="rviz" pkg="rviz" type="rviz" output="screen"
    args="-d $(find social_experiments)/config/rviz/replay.rviz" />

  <!-- robot and map -->
  <include file="$(find hera_bringup)/launch/bring_up.launch" >
    <arg name="map_name"              default="$(arg map_name)"/>
    <arg name="enable_description"    default="true"/>
    <arg name="enable_map"            default="true"/>
    <arg name="enable_localization"   default="false"/>
    <arg name="enable_navigation"     default="false"/>
  </include>

  <!-- play bag gui -->
  <node name="rqt_bag" pkg="rqt_bag" type="rqt_bag" output="screen"
    args="$(arg bag)"/>

  <!-- play bag -->
  <!-- <node pkg="rosbag" type="play" name="player" output="screen"
    args="- -clock - -pause $(arg bag)"/> -->

</launch>
